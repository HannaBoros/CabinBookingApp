            <div class="form-group">
                <label asp-for="CabinId" class="control-label label-txt"></label>
                <select asp-for="CabinId" class ="form-control rounded-0" asp-items="ViewBag.CabinId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label label-txt"></label>
                <select asp-for="Status" class ="form-control rounded-0" asp-items="ViewBag.Status"></select>
            </div>
            <div class="form-group">
