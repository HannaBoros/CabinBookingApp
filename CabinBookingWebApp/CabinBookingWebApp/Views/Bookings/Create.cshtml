@model CabinBookingWebApp.Models.Booking

@{
    ViewData["Title"] = "Create";
   
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<div class="container input-forms">
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h1 class="home-text text-center">Create</h1>
<h4 class="home-text text-center">Booking</h4>

            <div class="form-group">
                <label asp-for="CheckInDate" class="control-label label-txt"></label>
                <input asp-for="CheckInDate" class="form-control rounded-0" />
