@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}


<div class="container transparent p-3">
<h1 class="home-text text-center">Manage your account</h1>
    <h2 class="home-text text-center">Change your account settings</h2>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-6">
           
            @RenderBody()
           
        </div> 
        <div class="col-md-3">
            <img src="~/Images/user.png" class="user-icon" />
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
