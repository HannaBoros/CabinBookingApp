@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<hr />
<div class="container">
    <div class="input-forms">
        <form method="post">
<h1 class="text-center home-text">@ViewData["Title"]</h1>
<h2 class="text-center home-text">Enter your email.</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control  input-bk" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label label-txt"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary btn-colors">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
