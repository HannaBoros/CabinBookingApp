@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="container">
    <div class="input-forms">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h1 class="text-center home-text">Register</h1>
            <h2 class="text-center home-text">Create a new account.</h2>           
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control input-bk" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label label-txt"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control input-bk" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label label-txt"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control input-bk" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword" class="form-label label-txt"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary btn-colors">Register</button>
        </form>
    </div>
 
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
