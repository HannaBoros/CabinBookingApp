@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}


<div class="container">
    <div class="input-forms">
        <form method="post">
            <h2 class="text-center home-text">Resend Email Confirmation</h2>
<h2 class="text-center home-text">Enter your email.</h2>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control input-bk" aria-required="true" />
                <label asp-for="Input.Email" class="form-label label-txt"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary btn-colors">Resend</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
